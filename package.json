{
  "private": true,
  "name": "mobx-form",
  "version": "0.0.1",
  "packageManager": "pnpm@8.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "dev": "turbo watch build",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "run-p -lc --aggregate-output 'lint:*'",
    "lint:eslint": "eslint --color --cache './**/*.{mjs,ts,tsx}'",
    "lint:prettier": "prettier --color --check './**/*.{mjs,ts,tsx,json}'",
    "format": "run-s 'format:*'",
    "format:eslint": "pnpm lint:eslint --fix",
    "format:prettier": "pnpm lint:prettier --write"
  },
  "lint-staged": {
    "*.{mjs,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.17.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3"
  }
}
